# /etc/nginx/sites-available/https
# cat $SSL_PATH/certificate.crt $SSL_PATH/ca_bundle.crt > $SSL_PATH/chained_cert.crt

server {
    listen 443 ssl;

    server_name         vitorx86.dev;
    ssl_certificate     $SSL_PATH/chained_cert.crt;
    ssl_certificate_key $SSL_PATH/private.key;

    access_log /var/log/nginx/nginx.vhost.access.log;
    error_log /var/log/nginx/nginx.vhost.error.log;

    location * {
        proxy_pass http://localhost:8081/;
    }  
}